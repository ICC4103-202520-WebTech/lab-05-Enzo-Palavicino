<h1>Reservation <%= @reservation.code %></h1>

<table class="table table-bordered">
  <tbody class= "table-secondary">
    <tr><th>Guest ID</th><td><%= @reservation.guest_id %></td></tr>
    <tr><th>Room ID</th><td><%= @reservation.room_id %></td></tr>
    <tr><th>Check-in</th><td><%= @reservation.check_in %></td></tr>
    <tr><th>Check-out</th><td><%= @reservation.check_out %></td></tr>
    <tr><th>Status</th><td><%= @reservation.status %></td></tr>
    <tr><th>Adults</th><td><%= @reservation.adults %></td></tr>
    <tr><th>Children</th><td><%= @reservation.children %></td></tr>
  </tbody>
</table>

<%= link_to "Back to Reservations", reservations_path, class: "btn btn-secondary" %>

